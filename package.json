{
  "name": "google_photos_viewer",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run next-dev\" \"npm run electron-dev\"",
    "next-dev": "next dev",
    "electron-dev": "wait-on tcp:3000 && electron .",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test:print": "node ./test/print.js",
    "dist": "electron-builder"
  },
  "build": {
    "npmRebuild": false,
    "appId": "com.mycompany.googlephotosviewer",
    "productName": "Google Photos Viewer",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@heroicons/react": "^2.0.13",
    "@next/font": "13.1.1",
    "@prisma/client": "^4.8.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "autoprefixer": "^10.4.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron-is-dev": "^2.0.0",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "eslint": "8.31.0",
    "eslint-config-next": "13.1.1",
    "lucide-react": "^0.562.0",
    "next": "13.1.1",
    "postcss": "^8.4.20",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sweetalert2": "^11.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.2.4",
    "typescript": "4.9.4",
    "usb": "^1.9.2",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^26.4.0",
    "prisma": "^4.8.1",
    "tailwindcss-animate": "^1.0.7"
  }
}
